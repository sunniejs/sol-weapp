/* pages/about/index.wxss */

.title {
    margin: 30rpx auto;
    font-size: 44rpx;
    font-weight: 400;
}

.list {
    display: flex;
    flex-direction: column;
    color:#666;
    font-size: 28rpx;
}

.item {
    font-size: 28rpx;
    line-height: 48rpx;
}
.container {
  position: relative;
  min-height: 100vh;
  box-sizing:border-box;
  background: #fff;
  padding:    20px  20px 120px;
}

.title {
    padding-left: 15px;
    margin-bottom: 10px;
}

.logo,
.title-text {
    display: inline-block;
    vertical-align: middle;
}

.title-text {
    font-size: 32px;
    font-weight: 500;
    margin-left: 15px;
}

.logo {
    width: 36px;
    height: 36px;
}
/* 外层组件的宽度可设置成100%或具体数值 */
 .adContainer {
   position: absolute;
   bottom: 10px;
   width: 300px;
   left:0;
   right:0;
  margin:0 auto;
   box-sizing:border-box;
}  
.item image{
 width:100%;
